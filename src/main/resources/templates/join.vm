        },
        getKakaoInfo: function(){
            var self = this;
            Kakao.API.request({
                url: '/v1/user/me',
                success: function(res) {
                    self.authInfo = res;
                    self.checkId();
                },
                fail: function(error) {
                    alert(JSON.stringify(error))
                }
            });
        },
        checkId: function(id){
            var self = this;
//            this.authObj.access_token
            jQuery.ajax({
                    url: '/users/' + id,
                    type: 'get',
                    success: function(data){
                        if(data.id == self.authInfo.id){
                            alert("이미 가입한 아이디 입니다.");
                        } else {
                            self.fillRegiForm();
                        }
                    }
                }
            )
        },
        fillRegiForm: function(){
            jQuery("#nickname").val(this.authInfo.properties.nickname);

            jQuery("#profile_image").attr('src', this.authInfo.properties.profile_image);
            jQuery("#thumbnail_image").attr('src', this.authInfo.properties.thumbnail_image);
        }
    }
</script>
