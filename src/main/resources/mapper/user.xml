<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaesoosa.UserMapper">

    <select id="selectList" resultType="User">
        SELECT
        id AS id,
        nickname AS nickname
        FROM user
    </select>

    <select id="selectOne" resultType="User" parameterType="Long">
        SELECT
        id AS id,
        nickname AS nickname
        FROM user
        WHERE user.id = #{value}
    </select>

    <insert id="insert" parameterType="com.gaesoosa.User">
        INSERT INTO user (
            nickname,
            address,
            profile_image,
            access_key
        )
        VALUES (
            #{nickname},
            #{address},
            #{accessKey},
            #{profileImage}
        )
    </insert>

    <update id="update" parameterType="com.gaesoosa.User">
        UPDATE  user SET
        nickname = #{nickname},
        address = #{address},
        profile_image = #{profileImage},
        access_key = #{accessKey}
        WHERE id = #{id}
    </update>

